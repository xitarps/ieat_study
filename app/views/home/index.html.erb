<p>Hello, <%= @email %></p>

<% if user_signed_in? %>
  <% if current_user.restaurant? %>
    <p>Seus produtos, <%= current_user.restaurant.name %>:</p>

    <table>
      <thead>
        <tr>
          <th>
            Produto
          </th>
          <th>
            Valor
          </th>
        </tr>
      </thead>

      <tbody>
        <% current_user.restaurant.products.each do |product| %>
          <tr>
            <td>
              <%= product.name %>
            </td>
            <td>
              <%= number_to_currency(product.value, unit: 'R$', separator: ',', delimiter: '') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
<% end %>

<p>
  <%= link_to 'Restaurantes', restaurants_path%> | 
  <%= link_to 'Produtos', products_path%>
</p>
